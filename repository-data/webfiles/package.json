{
  "name": "publishing",
  "description": "Build environment for publishing platform web sites",
  "version": "0.0.0",
  "author": {
    "name": "mygov.scot team",
    "email": "dleepdigmsgb@scotland.gsi.gov.uk",
    "url": "http://www.gov.scot/"
  },
  "scripts": {
    "postshrinkwrap": "node_modules/.bin/sealant @scottish-government/mygov-assets",
    "sass": "npm run sass_mygov; npm run sass_eap; npm run sass_tn",
    "sass_mygov": "node_modules/.bin/node-sass ./src/main/site.mygov/scss/main.scss ./src/main/resources/site/assets/mygov/css/main.css --style compressed --cache-location target/.sass-cache",
    "sass_eap": "node_modules/.bin/node-sass ./src/main/site.economicactionplan/scss/main.scss ./src/main/resources/site/assets/economicactionplan/css/main.css --style compressed --cache-location target/.sass-cache",
    "sass_tn": "node_modules/.bin/node-sass ./src/main/site.tradingnation/scss/main.scss ./src/main/resources/site/assets/tradingnation/css/main.css --style compressed --cache-location target/.sass-cache",
    "svgsprite": "node svg-sprite",
    "webpack": "npm run webpack_mygov; npm run webpack_eap; npm run webpack_tn",
    "webpack_mygov": "node_modules/.bin/webpack --config ./src/main/site.mygov/webpack.config.js",
    "webpack_eap": "node_modules/.bin/webpack --config ./src/main/site.economicactionplan/webpack.config.js",
    "webpack_tn": "node_modules/.bin/webpack --config ./src/main/site.tradingnation/webpack.config.js"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@scottish-government/pattern-library": "0.0.x",
    "babel-loader": "^8.0.6",
    "node-sass": "^4.12.0",
    "sealant": "^0.1.1",
    "svg-sprite": "^1.5.0",
    "webpack": "^4.41.1",
    "webpack-cli": "^3.3.9"
  }
}
